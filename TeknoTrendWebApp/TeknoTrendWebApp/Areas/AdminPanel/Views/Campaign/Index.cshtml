@model IEnumerable<TeknoTrendWebApp.Models.Campaigns>
@using TeknoTrendWebApp.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}


<div class="box">
    <div class="title">
        <a href="@Url.Action("Create","Campaign")" class="eklebutton">+ Ekle</a><h3>Kampanyalar <small style="font-weight:100"> Tüm Kampanyalar</small></h3>
        <div style="clear:both"></div>
    </div>
    <div class="content">
        <table class="table" cellpadding="0" cellspacing="0">
            <tr>
                <th>Resim</th>
                <th>No</th>
                <th>Isim</th>
                <th>Kategori</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (Campaigns item in Model)
            {
                <tr>
                    <td>
                        @if (item.ImageUrl != null)
                        {
                                <img src="~/Assets/CampaignImages/@item.ImageUrl" width="250" />
                        }
                        else
                        {
                            <img src="~/Assets/ProductImages/none.png" width="40" />
                        }
                    </td>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>
                        @item.category.Name
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <label>Aktif</label>
                        }
                        else
                        {
                            <label>Pasif</label>
                        }
                    </td>
                    <td>
                        <div>
                            <a href="@Url.Action("ChangeStatus", "Campaign", new {id= item.ID})" class="tableButton change"><i class="fa fa-recycle"></i></a>
                            <a href="@Url.Action("Edit","Campaign", new {id= item.ID})" class="tableButton edit"><i class="fa fa-edit"></i></a>
                            <a href="@Url.Action("Delete","Campaign", new {id= item.ID})" class="tableButton delete"><i class="fa-regular fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
