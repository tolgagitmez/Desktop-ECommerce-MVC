@model TeknoTrendWebApp.Models.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-profile">
    <div class="sideMenu">
        <a href="#">Alışveriş</a>
        <a href="#">Kişisel Bilgiler</a>
        <a href="#">Tekno Trend CLUB Üyeliği</a>
        <a href="#">Fırsatlardan Haberdar Ol</a>
        <a href="#">İletişim</a>
        <a href="#">Hediye Kartı</a>
    </div>
</div>
<div class="user-box">

    <h2 style="color: #333; text-align: center; font-family: Arial, sans-serif; background-color: #f4f4f4; padding: 10px; border-radius: 5px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">Profil Düzenle</h2>

    <div class="userpanelContent">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.IsDeleted)
            @Html.HiddenFor(model => model.CreationDate)
            @Html.HiddenFor(model => model.IsActive)
            if (ViewBag.hataMesaj != null)
            {
                <div class="userpnl_uyari">
                    @ViewBag.hataMesaj
                </div>
            }
            if (ViewBag.basarili != null)
            {
                <div class="userpnl_basari">
                    @ViewBag.basarili
                </div>
            }
            <div class="row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "formTextbox" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "formValidationText" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "formTextbox" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "formValidationText" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "formTextbox", @placeholder = "ornek@ornek.com" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "formValidationText" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "formTextbox", @placeholder = "+90 555 555 55 55" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "formValidationText" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "formTextbox" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "formValidationText" })
            </div>
            <div>
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "formLabel" })
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "formTextbox" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "formValidationText" })
            </div>

            <div class="row">
                <button type="submit" class="LoginButton">Düzenle</button>
            </div>
        }
    </div>


</div>

