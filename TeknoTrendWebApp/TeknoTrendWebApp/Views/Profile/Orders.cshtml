
@{
    ViewBag.Title = "Siparişlerim";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div style="max-width: 800px; margin: 50px auto; padding: 20px; background-color: #fff; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h2 style="text-align: center; margin-bottom: 20px; color: #4CAF50;">Siparişlerim</h2>

    @foreach (var order in Model)
    {
        <div style="border: 1px solid #ddd; border-radius: 8px; margin-bottom: 20px; overflow: hidden;">
            <div style="background-color: #f1f1f1; padding: 10px 20px; border-bottom: 1px solid #ddd;">
                <h4 style="margin: 0; color: #343a40;">Sipariş Numarası: @order.InvoiceNumber</h4>
                <p style="margin: 0; color: #555;"><strong>Sipariş Tarihi:</strong> @order.OrderDate.ToString("dd/MM/yyyy")</p>
            </div>
            <div style="padding: 20px;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="padding: 12px; border: 1px solid #ddd; background-color: #f8f9fa; text-align: left;">Ürün Adı</th>
                            <th style="padding: 12px; border: 1px solid #ddd; background-color: #f8f9fa; text-align: left;">Adet</th>
                            <th style="padding: 12px; border: 1px solid #ddd; background-color: #f8f9fa; text-align: left;">Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <tr>
                                <td style="padding: 12px; border: 1px solid #ddd; text-align: left;">@detail.ProductName</td>
                                <td style="padding: 12px; border: 1px solid #ddd; text-align: left;">@detail.Quantity</td>
                                <td style="padding: 12px; border: 1px solid #ddd; text-align: left;">@detail.Price.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>